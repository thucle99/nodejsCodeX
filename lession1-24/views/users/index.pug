extend ../layouts/common  
//- ket noi voi common.pug trong layouts
block content
   h2 USERS
   a.btn.btn-primary.mb-2(href="/users/create") New users
   form(action="/users/search",method="GET",class="ml-2 d-flex") 
      //- gui lên thanh users/search
      //- q sẽ đại diện cho gtri hiển thị trên thanh 
      
      input(type="text",name="q" class="ml-3") 
      button(class="btn btn-primary") Seach
   table.table.table-striped
      tr
         th(scope='col') Avatar
         th(scope='col') Name
         th(scope='col') Phone
         th(scope='col') Actions     
      each user in users    
         tr 
            td
               img(src=user.avatar,width="100")
            td=user.name
            td=user.phone
            td
               a.btn.btn-secondary( href="/users/" +user.id ) View