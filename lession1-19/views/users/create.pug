extend ../layouts/common  
//- ket noi voi common.pug trong layouts
block content
   h1  Create User
   if errors
      each error in errors
        .alert.alert-danger=error
   form(action="/users/create",method='POST')
      .form-group
         label(for="name")  Name     
         input#name.form-control(type="text" name="name" value=values ? values.name:"")
         //-  nếu values k rỗng thì gtri đk gán,không thì values.name=""
      .form-group
         label(for="phone")  Phone    
         input#phone.form-control(type="text" name="phone" value=values ? values.phone:"")   

      button.btn.btn-primary Create 
   